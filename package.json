{
  "name": "riddle-me-this",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=@riddle-me-this/api",
    "dev:web": "npm run dev --workspace=@riddle-me-this/web",
    "dev:widget": "npm run dev --workspace=@riddle-me-this/widget",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@riddle-me-this/shared",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^16.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "vitest": "^1.0.0"
  }
}
